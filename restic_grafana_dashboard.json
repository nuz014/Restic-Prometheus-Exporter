{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "type": "stat",
      "title": "Total Snapshots",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "restic_snapshot_count",
          "legendFormat": "Total Snapshots",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["last"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none"
        },
        "overrides": []
      }
    },
    {
      "type": "table",
      "title": "Snapshot Details",
      "gridPos": { "x": 6, "y": 0, "w": 18, "h": 8 },
      "targets": [
        {
          "expr": "restic_snapshot_details",
          "legendFormat": "{{id}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {}
        },
        "overrides": []
      },
      "options": {
        "showHeader": true,
        "columns": [
          { "text": "ID", "value": "id" },
          { "text": "Time", "value": "date" },
          { "text": "Size (Bytes)", "value": "size" },
          { "text": "Hostname", "value": "host" }
        ],
        "sortBy": [
          {
            "displayName": "date",
            "desc": true
          }
        ]
      }
    },
    {
      "type": "time_series",
      "title": "Snapshot Sizes Over Time",
      "gridPos": { "x": 0, "y": 8, "w": 24, "h": 8 },
      "targets": [
        {
          "expr": "restic_snapshot_details",
          "legendFormat": "{{id}} - {{host}}",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 1,
            "fillOpacity": 0.5
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": {
          "mode": "single"
        },
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      }
    },
    {
      "type": "stat",
      "title": "Repository Check",
      "gridPos": { "x": 0, "y": 16, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "restic_check_success",
          "legendFormat": "Repository Check",
          "refId": "D"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["last"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none"
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Repository Locks",
      "gridPos": { "x": 6, "y": 16, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "restic_locks_total",
          "legendFormat": "Repository Locks",
          "refId": "E"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["last"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none"
        },
        "overrides": []
      }
    },
    {
      "type": "table",
      "title": "Total Backup Size & Files",
      "gridPos": { "x": 0, "y": 20, "w": 24, "h": 8 },
      "targets": [
        {
          "expr": "restic_backup_size_total",
          "legendFormat": "Total Backup Size",
          "refId": "F"
        },
        {
          "expr": "restic_backup_files_total",
          "legendFormat": "Total Backup Files",
          "refId": "G"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        },
        "overrides": []
      },
      "options": {
        "showHeader": true,
        "columns": [
          { "text": "Backup Size (Bytes)", "value": "size" },
          { "text": "Backup Files", "value": "files" }
        ]
      }
    }
  ],
  "refresh": "10s",
  "schemaVersion": 36,
  "tags": ["restic", "prometheus"],
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-7d",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": [
      "5s",
      "10s",
      "30s",
      "1m",
      "5m",
      "15m",
      "30m",
      "1h",
      "2h",
      "1d"
    ],
    "time_options": [
      "5m",
      "15m",
      "1h",
      "6h",
      "12h",
      "24h",
      "2d",
      "7d",
      "30d"
    ]
  },
  "timezone": "",
  "title": "Restic Exporter Dashboard",
  "uid": "restic-dashboard",
  "version": 1
}